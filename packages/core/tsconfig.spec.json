{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "runtime/**/*.test.ts",
    "runtime/**/*.spec.ts",
    "runtime/**/*.test.tsx",
    "runtime/**/*.spec.tsx",
    "runtime/**/*.test.js",
    "runtime/**/*.spec.js",
    "runtime/**/*.test.jsx",
    "runtime/**/*.spec.jsx",
    "runtime/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
